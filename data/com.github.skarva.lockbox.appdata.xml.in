<component type="desktop">
    <id>com.github.skarva.lockbox</id>
    <metadata_license>CC0</metadata_license>
    <project_license>GPL-3.0+</project_license>
    <name>Lock Box</name>
    <summary>Lock your secrets up tight</summary>

    <description>
        <p>Keep your notes and website credentials secure in an easy-to-manage collection. It is ready to go when you're logged in, and securely encrypted when you're not.</p>
        <p>Features</p>
        <ul>
          <li>Fast search</li>
          <li>Sort by name or date added</li>
          <li>Access to passwords saved in Epihpany</li>
        </ul>
    </description>

    <launchable type="desktop-id">com.github.skarva.lockbox.desktop</launchable>
    <provides>
      <binary>com.github.skarva.lockbox</binary>
    </provides>

    <screenshots>
        <screenshot type="default">
            <caption>Dark Theme</caption>
            <image>screenshot1.png</image>
        </screenshot>
        <screenshot>
            <caption>Light Theme</caption>
            <image>screenshot2.png</image>
        </screenshot>
        <screenshot>
            <caption>Creating a new secret item</caption>
            <image>screenshot3.png</image>
        </screenshot>
        <screenshot>
            <caption>Quick searching</caption>
            <image>screenshot4.png</image>
        </screenshot>
    </screenshots>

    <developer_name>skarva llc</developer_name>
    <url type="homepage">https://skarva.tech</url>
    <url type="bugtracker">https://github.com/skarva/lockbox/issues</url>

    <releases>
        <release version="1.0" date="2019-8-10">
            <description>
                <p>Initial release</p>
            </description>
        </release>
    </releases>

    <custom>
        <value key="x-appcenter-color-primary">#667885</value>
        <value key="x-appcenter-color-primary-text">rgb(255, 255, 255)</value>
        <value key="x-appcenter-suggested-price">5</value>
    </custom>
</component>
